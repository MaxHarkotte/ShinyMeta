library(shiny)
library(metafor)

# Define UI for application that draws a histogram
shinyUI(fluidPage(
  
  # Application title
  titlePanel("Old Faithful Geyser Data"),
  
  # Application title
  titlePanel("The Shiny R Meta-Analyzer based on metafor"),
  
  # Selection of a given Dataset
  selectInput("selectData", label = h3("Select a Dataset"), 
              choices = as.list(data(package='metafor')$results[,3]), 
              selected = 1),
  
  mainPanel(
    fluidRow(column(3, verbatimTextOutput("valueData"))),
    
    fluidRow(dataTableOutput("valueData"))
  )
   
  # # Sidebar with a slider input for number of bins 
  # sidebarLayout(
  #   sidebarPanel(
  #      sliderInput("bins",
  #                  "Number of bins:",
  #                  min = 1,
  #                  max = 50,
  #                  value = 30)
  #   ),
  #   
  #   # Show a plot of the generated distribution
  #   mainPanel(
  #      plotOutput("distPlot")
  #   )
  # )
))
